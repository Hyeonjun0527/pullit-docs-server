{
    "version": 2,
    "builds": [
        { "src": "package.json", "use": "@vercel/node", "config": { "installCommand": "npm install", "includeFiles": ["prisma/**", "public/**"] } },
        { "src": "public/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/((?!api/|sw.js|.*\\..*).*)",
            "dest": "/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}
