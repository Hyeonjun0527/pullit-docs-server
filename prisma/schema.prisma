generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl is needed for migrations, see https://www.prisma.io/docs/orm/prisma-schema/data-sources#direct-connection-urls-for-database-migrations
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Document {
  id        Int      @id @default(autoincrement())
  path      String   @unique
  content   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("documents")
}
